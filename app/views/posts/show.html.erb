<div id="main">

<!-- Post -->
    <section class="post">
        <header class="major">
            <span class="date"><%= @post.created_at.to_formatted_s(:long) %></span>
            <h1><%= @post.title %></h1>
        </header>
        <div class="image main"><img src="<%= @post.img_url %>" alt="" /></div>
        <p><%= @post.content %></p>
        <a href="/posts/<%= @post.id %>" data-method="delete">Delete</a>
    </section>

</div>

